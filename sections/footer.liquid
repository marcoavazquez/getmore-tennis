{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="footer--container container">
    <div class="footer--content">
      <nav class="footer--menu">
        <ul>
          {% for link in linklists['main-menu'].links %}
            <li class="{% if link.active %}active{% endif %}">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
      <ul class="footer--social-media">
        <li>
          <a href="#"><img src="{{ 'linkedin.svg' | asset_url }}" alt="Linkedin"></a>
        </li>
        <li>
          <a href="#"><img src="{{ 'vimeo.svg' | asset_url }}" alt="Vimeo"></a>
        </li>
        <li>
          <a href="#"><img src="{{ 'instagram.svg' | asset_url }}" alt="Instagram"></a>
        </li>
        <li>
          <a href="#"><img src="{{ 'twitter.svg' | asset_url }}" alt="Twitter/X"></a>
        </li>
        <li>
          <a href="#"><img src="{{ 'facebook.svg' | asset_url }}" alt="Facebook"></a>
        </li>
      </ul>
    </div>
    <img src="{{ 'logo.svg' | asset_url }}" class="footer--logo" alt="Logo">
  </div>
</footer>
